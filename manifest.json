{
  "name": "Pause Block",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Pause Block - Delay distracting websites.",
  "icons": {
    "128": "images/icon.png"
  },
  "action": {
    "default_icon": "images/icon.png",
    "default_title": "Pause Block"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "history",
    "storage"
  ],
  "host_permissions": [
   "<all_urls>"
  ]
}
