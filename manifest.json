{
  "name": "Sakura Blocker",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Block/pause junk sites.",
  "icons": {
    "128": "images/sakura128px.png"
  },
  "action": {
    "default_icon": "images/sakura19px.png",
    "default_title": "Sakura Blocker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "settings.html",
  "permissions": [
    "history",
    "storage",
    "tabs",
	"activeTab"
  ],
  "host_permissions": [
   "<all_urls>"
  ]
}
